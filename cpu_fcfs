#include<stdio.h>
void main()
{
int n,i,a[20],b[20],k=0,j=0,w[20],t[20];
printf("Enter The Number Of Process : ");
scanf("%d",&n);
printf("Enter The Arrival Time For Each\n");
for(i=0;i<n;i++)
{
scanf("%d",&a[i]);
}
printf("Enter The Burst Time For Each\n");
for(i=0;i<n;i++)
{
scanf("%d",&b[i]);
}
printf("\nProcess\tArrival\tBurst\tWaiting\tTurnAround\n");
w[0]=0;j=b[0];
printf("P[0]\t");
printf("%d\t",a[0]);
printf("%d\t",b[0]);
printf("0\t");printf("%d\t",b[0]);
for(i=1;i<n;i++)
{
printf("\n");
printf("P[%d]\t",i);
printf("%d\t",a[i]);
printf("%d\t",b[i]);
w[i]=b[i-1]-a[i];
printf("%d\t",w[i]);
t[i]=w[i]+b[i];
printf("%d\t",t[i]);
k=k+w[i];
j=j+t[i];
b[i]=b[i-1]+b[i];
}
float avg=(float)k/n;
float avg1=(float)j/n;
printf("\nAverage Waiting Time Is : %f\n",avg);
printf("TurnAround Time Is : %f\n\n",avg1);
}
